<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFE0"
    android:paddingTop="15dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monstera Deliciosa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/plant"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#556B2F"
        android:layout_marginTop="10dp"
        android:padding="8dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DODAJ DO ULUB."
            android:textColor="#FFFFFF"
            android:background="#556B2F" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="USUŃ Z ULUB."
            android:textColor="#FFFFFF"
            android:background="#556B2F" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="WIĘCEJ INFO"
            android:textColor="#FFFFFF"
            android:background="#556B2F" />
    </LinearLayout>

    <TextView
        android:id="@+id/favoriteCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba w ulubionych: 0"
        android:layout_marginTop="8dp"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pielęgnacja"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monstera preferuje jasne stanowisko bez bezpośredniego słońca i regularne podlewanie."
        android:textColor="#696969"
        android:layout_marginTop="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"
        android:layout_marginTop="10dp" />
</LinearLayout>
